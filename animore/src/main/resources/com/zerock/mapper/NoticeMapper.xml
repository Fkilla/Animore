<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerock.mapper.NoticeMapper">

<!-- 공지사항 전체 목록 -->
<select id="getList" resultType="com.zerock.domain.NoticeVO">
	<![CDATA[
	select * from noticeboard where bno > 0
	]]>
</select>

<!-- 공지사항 쓰기 -->
<insert id="insertSelectKey">
	<selectKey keyProperty="bno" order="BEFORE" resultType="long">
		select seq_noticeboard.nextval from dual
	</selectKey>
	insert into noticeboard (bno, title, content, writer)
	values (#{bno}, #{title}, #{content}, #{writer})
</insert>

<!-- 공지사항 특정글 조회 -->
<select id="read" resultType="com.zerock.domain.NoticeVO">
	select * from noticeboard where bno = #{bno}
</select>

<!-- 공지사항 삭제 -->
<delete id="delete">
	delete from noticeboard where bno = #{bno}
</delete>

<!-- 공지사항 수정 -->
<update id="update">
	update noticeboard
	set
	title = #{title},
	content = #{content},
	updateDate = sysdate
	where bno = #{bno}
</update>


</mapper>